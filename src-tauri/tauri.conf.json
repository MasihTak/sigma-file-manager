{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build-ignore-ts",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5180",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Sigma File Manager v2",
    "version": "../package.json"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.alekseyhoffman.sigma-file-manager-v2",
      "category": "Productivity",
      "copyright": "Copyright Â© 2021 - present Aleksey Hoffman",
      "shortDescription": "File manager",
      "longDescription": "\"Sigma File Manager\" is a free, open-source, quickly evolving, modern file manager (explorer / browser) app for Windows and Linux.",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "targets": [
        "nsis",
        "deb",
        "appimage",
        "app",
        "dmg",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "installerIcon": "icons/icon.ico"
        }
      },
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      }
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "app": {
        "all": false,
        "hide": true,
        "show": true
      },
      "clipboard": {
        "all": false,
        "readText": true,
        "writeText": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": [
          "**"
        ],
        "writeFile": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": []
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
          "**"
        ]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [],
        "sidecar": true
      },
      "window": {
        "all": false,
        "center": true,
        "close": true,
        "create": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "print": true,
        "requestUserAttention": true,
        "setAlwaysOnTop": true,
        "setClosable": true,
        "setCursorGrab": true,
        "setCursorIcon": true,
        "setCursorPosition": true,
        "setCursorVisible": true,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": true,
        "setIcon": true,
        "setIgnoreCursorEvents": true,
        "setMaxSize": true,
        "setMaximizable": true,
        "setMinSize": true,
        "setMinimizable": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setSkipTaskbar": true,
        "setTitle": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "windows": [
      {
        "title": "Sigma File Manager v2",
        "width": 1280,
        "height": 720,
        "minWidth": 500,
        "minHeight": 300,
        "fullscreen": false,
        "resizable": true,
        "decorations": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png"
    }
  }
}